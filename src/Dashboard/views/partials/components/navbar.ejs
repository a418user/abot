          <div class="user-profile center">
            <strong class="menu-home"><%= status %></strong>
          </div>
          <%} else {%>
          <div class="user-profile center">
            <img
              src="https://cdn.discordapp.com/avatars/<%= user.id%>/<%= user.avatar%>.jpg"
